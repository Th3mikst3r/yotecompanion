<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aura.YoteCompanion">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Authentication.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.AddNotes"
            android:label="@string/title_activity_add_notes"
            android:parentActivityName=".Activities.NotesList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.NotesList" />
        </activity>
        <activity
            android:name=".Authentication.UserNameSettings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".Activities.NotesList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.NotesList" />
        </activity>
        <activity
            android:name=".Activities.ViewNote"
            android:label="@string/title_activity_view_note"
            android:parentActivityName=".Activities.NotesList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.NotesList" />
        </activity>
        <activity
            android:name=".Activities.EditNote"
            android:label="@string/title_activity_edit_note"
            android:parentActivityName=".Activities.ViewNote"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.ViewNote" />
        </activity>
        <activity
            android:name=".Activities.NotesList"
            android:label="Notes"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.NotesList" />
        </activity>
        <activity
            android:name=".Authentication.SignupActivity"
            android:label="Signup"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.NotesList" />
        </activity>
        <activity
            android:name=".Authentication.ResetPasswordActivity"
            android:label="Reset Password"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.NotesList" />
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="Settings"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.Activities.NotesList" />
        </activity>
        <activity
            android:name=".Authentication.LogoutActivity"
            android:label="@string/title_activity_logout"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>