<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aura.YoteCompanion">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Authentication.SignInActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".NoteActivities.AddNotes"
            android:label="@string/title_activity_add_notes"
            android:parentActivityName=".NoteActivities.NotesList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.NoteActivities.NotesList" />
        </activity>
        <activity
            android:name=".NoteActivities.ViewNote"
            android:label="@string/title_activity_view_note"
            android:parentActivityName=".NoteActivities.NotesList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.NoteActivities.NotesList" />
        </activity>
        <activity
            android:name=".NoteActivities.EditNote"
            android:label="@string/title_activity_edit_note"
            android:parentActivityName=".NoteActivities.ViewNote"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.NoteActivities.ViewNote" />
        </activity>
        <activity
            android:name=".NoteActivities.NotesList"
            android:label="Notes"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.NoteActivities.NotesList" />
        </activity>
        <activity
            android:name=".Authentication.SignupActivity"
            android:label="Signup"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.NoteActivities.NotesList" />
        </activity>
        <activity
            android:name=".Authentication.ResetPasswordActivity"
            android:label="Reset Password"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.NoteActivities.NotesList" />
        </activity>
        <activity
            android:name=".SettingsActivites.SettingsActivity"
            android:label="@string/title_activity_settings_new" />
        <activity
            android:name=".Authentication.HomeActivity"
            android:label="TEST" />
        <activity
            android:name=".HabitActivites.HabitList"
            android:label="Habits!"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.HabitActivites.HabitList" />
        </activity>
        <activity
            android:name=".HabitActivites.AddHabit"
            android:label="Add A Habit!"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".HabitActivites.ViewHabit"
            android:label="Current Habit"
            android:parentActivityName=".HabitActivites.HabitList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.HabitActivites.HabitList" />
        </activity>
        <activity
            android:name=".HabitActivites.EditHabit"
            android:label="Edit Habit"
            android:parentActivityName=".HabitActivites.HabitList"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aura.YoteCompanion.HabitActivites.HabitList" />
        </activity>

        <!-- [START firebase_service] -->
        <service
            android:name=".Helpers.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>